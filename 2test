%%%!T 'Ma super page'
!TT 'Quelques paragraphes'
!P 'Ceci est mon premier paragraphe court'
!P 'Un paragraphe
Un peu plus long
sur trois lignes'
!TT 'Une image pour le fun'
!I 'rick.jpg'
!TTT 'RickRoll'%%%

%%%@DEFINE (encodage) {'ISO-8859-1'}
%% Utilisation de l'encodage ISO-8859-1 pour faire apparaître des caractères erronés
@DEFINE (icone) {'rick.ico'}
@DEFINE (langue) {'fr'}
@TITREPAGE 'rickroll 2'
!T 'Un problème ?'
%% Le caractère è ne doit pas apparaître correctement%%%

%%%!T [couleurTexte : rgb(255,0,0), couleurFond : #00FF00, opacité : 50% ] 'Ceci est un long texte'
!P [largeur : 1000px, hauteur : 500px, couleurFond : #0000ff] 'Lorem ipsum dolor sit amet, consectetur adipiscing
elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam,
quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat. Duis aute
irure dolor in reprehenderit in voluptate velit esse cillum dolore eu fugiat nulla pariatur.
Excepteur sint occaecat cupidatat non proident, sunt in culpa qui officia deserunt mollit anim id est laborum.'%%%

%%%@STYLE ( titre1 ) [
couleurTexte : rgb(100,255,100)
couleurFond : #000000
]
!T 'Premier Titre'
!TT 'Premier sous-titre'
!T 'Deuxième Titre'%%%

%%%indice = 2 
%% mettre 2 en indice ne permet pas de retrouver la page du prof (les indices commencent bien à 0, cf le sujet n°1)
couleur1 = #ff0000
couleur2 = rgb(0,255,0)
!P 'Premier Paragraphe'
!P 'Second Paragraphe'
!P 'Troisième Paragraphe'
bloc = !P[indice]
bloc.couleurFond = couleur1
style1 = [couleurFond : couleur2]
bloc = !P[indice-1]
bloc.style = style1%%%

!T 'Un titre'
!T[0].couleurFond = #000000
SI (!T[0].couleurFond == #000000) :
!T[0].couleurTexte = #FF0000
FINSI
monTitre = !T[0]
SI (monTitre.couleurTexte == rgb(255,0,0)):
monTitre.largeur=500px
SINON:
monTitre.largeur=800px
FINSI

%%%POUR i [0,255] +25 :
!T 'Titre ' i/25
!T[i/25].couleurTexte = rgb(i,0,0)
FINI%%%

%%%a = 10001
@STYLE ( titre1 ) [
	largeur : 100%*a
   hauteur : 500%
]
!T 'Premier Titre'
!TT 'Premier sous-titre'
!T 'Deuxième Titre'
b=!T[1]
!T[1].hauteur=a+5
b.hauteur=a
!TT 'feur' a
!T[b]%%%

%%%a = rgb(100,255,100)
@STYLE ( titre1 ) [
couleurTexte : a
couleurFond : #000000
]
!T 'Premier Titre'
!TT 'Premier sous-titre'
!T 'Deuxième Titre'%%%

%%%indice = 1
couleur1 = #ff0000
couleur2 = rgb(0,255,0)
!P 'Premier Paragraphe'
!P 'Second Paragraphe'
!P 'Troisième Paragraphe'
bloc = !P[indice]
bloc.couleurFond = couleur1
style1 = [couleurFond : couleur2]
bloc = !P[indice-1]
bloc.style = style1%%%
